@Library('pipeline-lib') _

pipeline {
    agent any

    environment {
        SOLUTION_DIR = 'services/helios.identity'
        DIR = 'services/helios.identity/helios.identity.data'
        USERNAME = credentials('vps-username')
        DOMAIN = credentials('vps-domain')
        PROJECT_NAME = 'helios.identity'
        CONTEXT_NAME = 'IdentityContext'
        DOTNET_VERSION = '9.0'
        EF_VERSION = '9.0.0-*'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Load secrets') {
            steps {
                dir("services/helios.identity/helios.identity.api") {
                    loadAppsettings('helios.identity.api', 'Development')
                    loadAppsettings('helios.identity.api', 'Production')
                }
            }
        }

        stage('Database Migrations Dev') {
            steps {
                dir(SOLUTION_DIR) {
                    updateDBFromMigration(PROJECT_NAME, CONTEXT_NAME, DOTNET_VERSION, EF_VERSION, 'Development')
                }
            }
        }

        stage('Database Migrations Prod') {
            steps {
                dir(SOLUTION_DIR) {
                    updateDBFromMigration(PROJECT_NAME, CONTEXT_NAME, DOTNET_VERSION, EF_VERSION, 'Production')
                }
            }
        }
    }
}