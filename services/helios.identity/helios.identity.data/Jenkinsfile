@Library('pipeline-lib') _

pipeline {
    agent any

    parameters {
        booleanParam(
            name: 'FORCE_RUN',
            defaultValue: false,
            description: 'Forces run even if there are no changes'
        )
    }

    environment {
        SOLUTION_DIR = 'services/helios.identity'
        DIR = 'services/helios.identity/helios.identity.data'
        USERNAME = credentials('vps-username')
        DOMAIN = credentials('vps-domain')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Load secrets') {
            steps {
                dir("services/helios.identity/helios.identity.api") {
                    loadAppsettings('helios.identity.api', 'Development')
                }
            }
        }

        stage('Database Migrations Dev') {
            when {
                anyOf {
                    changeset "${DIR}/**"
                    expression { return params.FORCE_RUN }
                }
            }
            steps {
                dir("${SOLUTION_DIR}") {
                    runInDocker('mcr.microsoft.com/dotnet/sdk:9.0', [
                        'dotnet tool install --global dotnet-ef --version 9.0.0-*',
                        'export PATH=$PATH:/root/.dotnet/tools',
                        'dotnet ef migrations list -s ./services/helios.identity/helios.identity.api -p ./services/helios.identity/helios.identity.data -c IdentityContext -- --environment Development'
                    ])
                }
            }
        }
    }
}
