@Library('pipeline-lib') _

pipeline {
    agent any

    parameters {
        booleanParam(
            name: 'FORCE_RUN',
            defaultValue: false,
            description: 'Forces run even if there are no changes'
        )
    }

    environment {
        DIR = 'services/helios.identity/helios.identity.api'
        USERNAME = credentials('vps-username')
        DOMAIN = credentials('vps-domain')
    }

    when {
        anyOf {
            changeset "${DIR}"
            expression { return params.FORCE_RUN }
        }
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            when {
                anyOf {
                    changeset "${DIR}"
                    expression { return params.FORCE_RUN }
                }
            }
            steps {
                sh 'dotnet restore services/helios.identity/helios.identity.sln'
                sh 'dotnet build services/helios.identity/helios.identity.sln -c Release'
            }
        }

        // stage('Build') {
        //     when {
        //         anyOf {
        //             changeset "${DIR}"
        //             expression { return params.FORCE_RUN }
        //         }
        //     }
        //     steps {
        //     	sh 'npm run build'
        //     }
        // }

        // stage('Deploy') {
        //     when {
        //         anyOf {
        //             changeset "${DIR}"
        //             expression { return params.FORCE_RUN }
        //         }
        //     }
        //     steps {
        //         withCredentials([
		// 			string(credentialsId: 'vps-username', variable: 'USERNAME'),
		// 			string(credentialsId: 'vps-domain', variable: 'DOMAIN')
		// 		]) {
		// 			scpBuildFilesToWWW(USERNAME, DOMAIN, 'helios-identity.qrcool.ca')
		// 			updateNginxConf(USERNAME, DOMAIN, 'helios-identity.qrcool.ca')
		// 		}
        //     }
        // }
    }
}
