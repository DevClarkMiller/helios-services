@Library('pipeline-lib') _

pipeline {
    agent any

    parameters {
        booleanParam(
            name: 'FORCE_RUN',
            defaultValue: false,
            description: 'Forces run even if there are no changes'
        )
        booleanParam(
            name: 'FORCE_RUN_UPDATE_NGINX',
            defaultValue: false,
            description: 'Forces run for update nginx step even if there are no changes'
        )
    }

    environment {
        DIR = 'services/helios.identity/helios.identity.client'
        USERNAME = credentials('vps-username')
        DOMAIN = credentials('vps-domain')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm

                echo "WORKING DIR: ${DIR}"
            }
        }

        stage('Install Dependencies') {
            when {
                anyOf {
                    changeset "${DIR}/src/**"
                    changeset "${DIR}/package.json"
                    changeset "${DIR}/package-lock.json"
                    expression { return params.FORCE_RUN }
                }
            }
            steps {
                dir("${DIR}") { 
                    sh 'npm install'
                }
            }
        }

 
        stage('Build') {
            when {
                anyOf {
                    changeset "${DIR}/src/**"
                    changeset "${DIR}/package.json"
                    changeset "${DIR}/package-lock.json"
                    expression { return params.FORCE_RUN }
                }
            }
            steps {
                dir("${DIR}") {
                    sh 'npm run build'
                }
            }
        }

        stage('Deploy Dev') {
            when {
                anyOf {
                    changeset "${DIR}/src/**"
                    changeset "${DIR}/package.json"
                    changeset "${DIR}/package-lock.json"
                    expression { return params.FORCE_RUN }
                }
            }
            steps {
                dir("${DIR}") {
                    scpBuildFilesToWWW(USERNAME, DOMAIN, 'dev.helios-identity.qrcool.ca')
                    updateNginxConf(USERNAME, DOMAIN, 'dev.helios-identity.qrcool.ca', 'nginx.dev.conf')
                }
            }
        }

        stage('Deploy Prod') {
            when {
                anyOf {
                    changeset "${DIR}/src/**"
                    changeset "${DIR}/package.json"
                    changeset "${DIR}/package-lock.json"
                    expression { return params.FORCE_RUN }
                }
            }
            steps {
                dir("${DIR}") {
                    scpBuildFilesToWWW(USERNAME, DOMAIN, 'helios-identity.qrcool.ca')
                    updateNginxConf(USERNAME, DOMAIN, 'helios-identity.qrcool.ca', 'nginx.prod.conf')
                }
            }
        }

        stage('Update Nginx') {
             when {
                anyOf {
                    changeset "${DIR}/src/**"
                    changeset "${DIR}/package.json"
                    changeset "${DIR}/package-lock.json"
                    expression { return params.FORCE_RUN }
                    expression { return params.FORCE_RUN_UPDATE_NGINX }
                }
            }
            dir("${DIR}") {
                    updateNginxConf(USERNAME, DOMAIN, 'helios-identity.qrcool.ca', 'nginx.prod.conf')
            }
        }
    }
}
