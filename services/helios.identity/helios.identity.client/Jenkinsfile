@Library('pipeline-lib') _

pipeline {
    agent any

    parameters {
        booleanParam(
            name: 'FORCE_RUN',
            defaultValue: false,
            description: 'Forces run even if there are no changes'
        )
    }

    environment {
        SERVICE_DIR = ""
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm

                script {
                    env.SERVICE_DIR = sh(
                        script: "git rev-parse --show-prefix",
                        returnStdout: true
                    ).trim()
                }
                echo "Service directory: ${env.SERVICE_DIR}"
            }
        }

        stage('Install Dependencies') {
            when {
                anyOf {
                    changeset "${serviceDir}src/**"
                    changeset "${serviceDir}package.json"
                    changeset "${serviceDir}package-lock.json"
                    changeset "${serviceDir}Jenkinsfile"
                    expression { return params.FORCE_RUN }
                }
            }
            steps {
                sh 'npm install'
            }
        }

        stage('Build') {
            when {
                anyOf {
                    changeset "${serviceDir}src/**"
                    changeset "${serviceDir}package.json"
                    changeset "${serviceDir}package-lock.json"
                    changeset "${serviceDir}Jenkinsfile"
                    expression { return params.FORCE_RUN }
                }
            }
            steps {
            	sh 'npm run build'
            }
        }

        stage('Deploy') {
            when {
                anyOf {
                    changeset "${serviceDir}src/**"
                    changeset "${serviceDir}package.json"
                    changeset "${serviceDir}package-lock.json"
                    changeset "${serviceDir}Jenkinsfile"
                    expression { return params.FORCE_RUN }
                }
            }
            steps {
                withCredentials([
					string(credentialsId: 'vps-username', variable: 'USERNAME'),
					string(credentialsId: 'vps-domain', variable: 'DOMAIN')
				]) {
					scpBuildFilesToWWW(USERNAME, DOMAIN, 'helios-identity.qrcool.ca')
					updateNginxConf(USERNAME, DOMAIN, 'helios-identity.qrcool.ca')
				}
            }
        }
    }
}
