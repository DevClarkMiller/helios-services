@Library('pipeline-lib') _

pipeline {
    agent any

    parameters {
        booleanParam(
            name: 'All',
            defaultValue: false,
            description: 'Forces run even if there are no changes'
        )
        booleanParam(
            name: 'Dev',
            defaultValue: false,
            description: 'Run dev even if there are no changes'
        )
        booleanParam(
            name: 'Prod',
            defaultValue: false,
            description: 'Run prod even if there are no changes'
        )
        booleanParam(
            name: 'UpdateNginx',
            defaultValue: false,
            description: 'Update nginx dev step even if there are no changes'
        )
    }

    environment {
        DIR = 'services/helios.identity/helios.identity.client'
        USERNAME = credentials('vps-username')
        DOMAIN = credentials('vps-domain')
        PACKAGE = "${DIR}/package.json"
        PACKAGE_LOCK = "${DIR}/package-lock.json"
        SOLUTION = 'helios.identity'
        PROJECT = 'client'
		DEV_DOMAIN = 'dev.helios-identity.qrcool.ca'
		PROD_DOMAIN = 'helios-identity.qrcool.ca'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            when {
                anyOf {
                    changeset "${DIR}/src/**"
                    changeset PACKAGE
                    changeset PACKAGE_LOCK
                    expression { return params.All || params.Dev || params.Prod }
                }
            }
            steps {
                dir(DIR) { 
                    sh 'npm install'
					loadEnvFile(SOLUTION, PROJECT, 'development')
					loadEnvFile(SOLUTION, PROJECT, 'production')
                }
            }
        }

        stage('Build Dev') {
            when {
                anyOf {
                    changeset "${DIR}/src/**"
                    changeset PACKAGE
                    changeset PACKAGE_LOCK
                    expression { return params.All || params.Dev }
                }
            }
            steps {
                dir("${DIR}") {
                    sh 'npm run build:dev'
                }
            }
        }

        stage('Deploy Dev') {
            when {
                anyOf {
                    changeset "${DIR}/src/**"
                    changeset PACKAGE
                    changeset PACKAGE_LOCK
                    expression { return params.All || params.Dev }
                }
            }
            steps {
                dir(DIR) {
                    scpBuildFilesToWWW(USERNAME, DOMAIN, DEV_DOMAIN)
                }
            }
        }

        stage('Update Nginx Dev') {
             when {
                anyOf {
                    changeset "${DIR}/nginx.dev.conf"
                    expression { return params.All || (params.Dev && params.UpdateNginx) }
                }
            }

            steps {
                dir("${DIR}") {
                    updateNginxConf(USERNAME, DOMAIN, DEV_DOMAIN, 'nginx.dev.conf')
                }
            }
        }

        stage('Build Prod') {
            when {
                anyOf {
                    changeset "${DIR}/src/**"
                    changeset PACKAGE
                    changeset PACKAGE_LOCK
                    expression { return params.All || params.Prod }
                }
            }
            steps {
                dir(DIR) {
                    sh 'npm run build'
                }
            }
        }

        stage('Deploy Prod') {
            when {
                anyOf {
                    changeset "${DIR}/src/**"
                    changeset PACKAGE
                    changeset PACKAGE_LOCK
                    expression { return params.All || params.Prod }
                }
            }
            steps {
                dir(DIR) {
                    scpBuildFilesToWWW(USERNAME, DOMAIN, PROD_DOMAIN)
                }
            }
        }

        stage('Update Nginx Prod') {
            when {
                anyOf {
                    changeset "${DIR}/nginx.prod.conf"
                    expression { return params.All || (params.Prod && params.UpdateNginx) }
                }
            }
            steps {
                dir(DIR) {
                    updateNginxConf(USERNAME, DOMAIN, PROD_DOMAIN, 'nginx.prod.conf')
                }
            }
        }
    }
}
