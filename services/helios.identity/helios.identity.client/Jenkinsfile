@Library('pipeline-lib') _

pipeline {
    agent any

    parameters {
        booleanParam(
            name: 'All',
            defaultValue: false,
            description: 'Forces run even if there are no changes'
        )
        booleanParam(
            name: 'Dev',
            defaultValue: false,
            description: 'Run dev even if there are no changes'
        )
        booleanParam(
            name: 'Prod',
            defaultValue: false,
            description: 'Run prod even if there are no changes'
        )
        booleanParam(
            name: 'UpdateNginx',
            defaultValue: false,
            description: 'Update nginx dev step even if there are no changes'
        )
    }

    environment {
        DIR = 'services/helios.identity/helios.identity.client'
        USERNAME = credentials('vps-username')
        DOMAIN = credentials('vps-domain')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            when {
                anyOf {
                    changeset "${DIR}/src/**"
                    changeset "${DIR}/package.json"
                    changeset "${DIR}/package-lock.json"
                    expression { return params.FORCE_RUN }
                }
            }
            steps {
                dir("${DIR}") { 
                    sh 'npm install'
					loadEnvFile('helios.identity', 'client', 'development')
					loadEnvFile('helios.identity', 'client', 'production')
                }
            }
        }

        stage('Build Dev') {
            when {
                anyOf {
                    changeset "${DIR}/src/**"
                    changeset "${DIR}/package.json"
                    changeset "${DIR}/package-lock.json"
                    expression { return params.All || params.Dev }
                }
            }
            steps {
                dir("${DIR}") {
                    sh 'npm run build:dev'
                }
            }
        }

        stage('Deploy Dev') {
            when {
                anyOf {
                    changeset "${DIR}/src/**"
                    changeset "${DIR}/package.json"
                    changeset "${DIR}/package-lock.json"
                    expression { return params.All || params.Dev }
                }
            }
            steps {
                dir("${DIR}") {
                    scpBuildFilesToWWW(USERNAME, DOMAIN, 'dev.helios-identity.qrcool.ca')
                }
            }
        }

        stage('Update Nginx Dev') {
             when {
                anyOf {
                    changeset "${DIR}/nginx.dev.conf"
                    expression { return params.All || (params.Dev && params.UpdateNginx) }
                }
            }

            steps {
                dir("${DIR}") {
                    updateNginxConf(USERNAME, DOMAIN, 'dev.helios-identity.qrcool.ca', 'nginx.dev.conf')
                }
            }
        }

        stage('Build Prod') {
            when {
                anyOf {
                    changeset "${DIR}/src/**"
                    changeset "${DIR}/package.json"
                    changeset "${DIR}/package-lock.json"
                    expression { return params.All || params.Prod }
                }
            }
            steps {
                dir("${DIR}") {
                    sh 'npm run build'
                }
            }
        }

        stage('Deploy Prod') {
            when {
                anyOf {
                    changeset "${DIR}/src/**"
                    changeset "${DIR}/package.json"
                    changeset "${DIR}/package-lock.json"
                    expression { return params.All || params.Prod }
                }
            }
            steps {
                dir("${DIR}") {
                    scpBuildFilesToWWW(USERNAME, DOMAIN, 'helios-identity.qrcool.ca')
                }
            }
        }

        stage('Update Nginx Prod') {
            when {
                anyOf {
                    changeset "${DIR}/nginx.prod.conf"
                    expression { return params.All || (params.Prod && params.UpdateNginx) }
                }
            }
            steps {
                dir("${DIR}") {
                    updateNginxConf(USERNAME, DOMAIN, 'helios-identity.qrcool.ca', 'nginx.prod.conf')
                }
            }
        }
    }
}
